generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Player {
  id     Int    @id @default(autoincrement())
  name   String
  team   Int    @default(0)
  roomId Int
  Room   Room   @relation(fields: [roomId], references: [id])
}

model Post {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([name])
}

model Room {
  id        Int        @id @default(autoincrement())
  name      String
  createdAt DateTime   @default(now())
  Player    Player[]
  RoomAuth  RoomAuth[]
}


model RoomAuth {
  id        Int        @id @default(autoincrement())
  password  String
  token     String
  role      String

  roomId Int
  Room   Room   @relation(fields: [roomId], references: [id])
}

